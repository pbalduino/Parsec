  gem 'sqlite3'
  gem 'rspec', '~> 2.4'
  gem 'rspec-rails', '~> 2.4'
  gem 'ZenTest'
  gem 'autotest-rails'
  gem 'test_notifier'
end

group :production do
  gem 'pg'
end

# Gems used only for assets and not required
# in production enviro  nments by default.
